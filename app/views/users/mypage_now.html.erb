<div class="top-mypage">
    <div class="myprof">
            <div class="user-icon">
                <img src="<%= "/images/#{@user.image_name}" %>">
            </div>
                
            <div class="prof">
                
                <table border="1">
                          <tr>
                            <th>ユーザー名</th>
                            <th>年齢</th>
                            <th>性別</th>
                            <th>居住地</th>
                            <th>出身地</th>
                          </tr>
                          <tr>
                            <td><%= @user.name %></td>　
                            <td></td>
                            <td><%= @user.gender %></td>
                            <td><%= @user.residence %></td>
                            <td><%= @user.birthplace %></td>
                          </tr>
                </table>
                
                <div class="prof-main">
                    <p><i class="fas fa-user"></i>プロフィール</p>
                    <%= @user.profile %>
                </div>
                
            </div>
            
    </div>
        <div class="mng">
            <div class="management-menu">
                <ul class="management-list">
               <li><%= link_to("プロフィールの編集", "/users/#{@user.id}/edit",:class => "mnglist one") %></li>
               <li><%= link_to("参加イベント", "/users/#{@user.id}/mypage_belong",:class => "mnglist three") %></li>
               <li><%= link_to("イベントの編集", "/users/#{@user.id}/mypage_now",:class => "mnglist change") %></li>
               <li><%= link_to("お気に入りしたサークル", "/users/#{@user.id}/likes",:class => "mnglist five") %></li>
                </ul>
            </div>
            
            <div class="belong">
                <% @user.posts.each do |post| %>
                <ul class="belong-list">
                    <li><%= link_to(post.title, "/posts/#{post.id}/edit",:class => "mylist") %></li>
                </ul>
                <% end %>
            </div>
        </div>
</div>