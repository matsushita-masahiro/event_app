<div class="top-mypage">
    <div class="myprof">
            <div class="user-icon">
                <img src="<%= "/images/#{@user.image_name}" %>">
            </div>
                
            <div class="prof">
                
                <table border="1">
                          <tr>
                            <th>ユーザー名</th>
                            <th>年齢</th>
                            <th>性別</th>
                            <th>居住地</th>
                            <th>出身地</th>
                          </tr>
                          <tr>
                            <td><%= @user.name %></td>　
                            <td></td>
                            <td><%= @user.gender %></td>
                            <td><%= @user.residence %></td>
                            <td><%= @user.birthplace %></td>
                          </tr>
                </table>
                
                <div class="prof-main">
                    <p><i class="fas fa-user"></i>プロフィール</p>
                    <%= @user.profile %>
                </div>
                
            </div>
            
    </div>
    
                
    
    <div class="management-menu">
        <ul class="management-list">
           <li><%= link_to("プロフィールの編集", "/users/#{@user.id}/edit",:class => "mnglist one") %></li>
           <li><%= link_to("参加イベント", "/users/#{@user.id}/mypage_belong",:class => "mnglist three") %></li>
           <li><%= link_to("サークルの編集", "/users/#{@user.id}/mypage_now",:class => "mnglist four") %></li>
           <li><%= link_to("お気に入りしたサークル", "/users/#{@user.id}/likes",:class => "change") %></li>
        </ul>
    </div>
   
    <div class="likes">
        <% @likes.each do |like| %>
            <% post = Post.find_by(id: like.post_id) %>
            
            <div class="likes-list">
            <%= link_to(post.title, "/posts/#{post.id}/show",:class => "mylist") %>
            </div>
        <% end %>
    </div>
                    
                
                
                
                
                
</div>