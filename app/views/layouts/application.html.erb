<!DOCTYPE html>
<html>
  <head>
    <title>EVENT</title>
  
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.3.1/css/all.css" integrity="sha384-mzrmE5qonljUremFsqc01SB46JvROS7bZs3IO2EmfFsd15uHvIt+Y8vEf7N7fWAU" crossorigin="anonymous">

  </head>

  <body>
    <header>
        <div class="header-top">
               <ul class="header-menu">
                 <li class="header-list title">
                      <%= link_to("Event", "/" ,:class => "title-style" ) %>
               
                 </li>  
                  <% if @current_user %>
                <i id="open-menu-in" class="fas fa-bars"></i>
                      
                      <li id = "humb-menu" class="header-list sub">
                        <%= link_to("イベントを作る", "/posts/ready",:class => "list-style firstli") %>
                      </li>
                      
                      <li id = "open" class="header-list sub">
                        イベントを探す
                      </li>
                      
                      
                      
                       <li id = "humb-menu" class="header-list sub">
                        <%= link_to("ログアウト", "/logout" , {method: :post ,:class => "list-style secoundli logbtn"}) %>
                      </li>
                      
                      <li id = "humb-menu" class="header-list sub">
                         <%= link_to("マイページ","/users/#{@current_user.id}" ,:class => "list-style mybtn") %>
                      </li>
                      
                  <% else %>
               <i id="open-menu-out" class="fas fa-bars"></i>      
                      <li id = "humb-menu" class="header-list">
                        <%= link_to("イベントを作る", "/posts/ready",:class => "list-style firstli") %>
                      </li>
                      
                      <li id = "humb-menu" class="header-list">
                        <%= link_to("サークルを探す", "/posts/find",:class => "list-style") %> 
                      </li>
                  
                      <li id = "humb-menu" class="header-list">
                        <%= link_to("新規登録/ログイン", "/users/login_form",:class => "list-style secoundli logbtn") %>
                      </li>
                 
                  <% end %>
                
              </ul>
          </div> 
    </header>
    
    <div id="modal" class="hidden">
    <p>Hello. Hello. Hello. Hello. Hello. Hello. Hello. Hello. Hello. Hello. Hello. </p>
    <div id="close">
      Close
    </div>
    </div>

    
    

    <div id="mask" class="hidden"></div>

    <script src="js/main.js"></script>
    

    
    <%= yield %>
    
    <footer>
          <div class="btn footerbtn">
            <%= link_to("イベントを作る", "/posts/ready",:class => "logbtn") %>
        </div>
      <p>asdfasdfasdfsdf</p>
    </footer>
  </body>
</html>


<script>
  (function() {
  'use strict';

  var open = document.getElementById('open');
  var close = document.getElementById('close');
  var modal = document.getElementById('modal');
  var mask = document.getElementById('mask');

  open.addEventListener('click', function() {
    modal.className = '';
    mask.className = '';
  });

  close.addEventListener('click', function() {
    modal.className = 'hidden';
    mask.className = 'hidden';
  });

  mask.addEventListener('click', function() {
    // modal.className = 'hidden';
    // mask.className = 'hidden';
    close.click();
  });
})();

</script>



