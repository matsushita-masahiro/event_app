                            <option value="46">鹿児島</option>
                            <option value="47">沖縄</option>
                            <option value="48">海外</option>
                    </select>
                 </td>  
              </tr>
          <tr>
              <th>開催日</th><th>締切日</th>
          </tr>
          
          <tr>
              <td class="p-newdate"><input name="event_date" type="date"></td>
              <td class="p-newend"><input name="" type="date"></td>
          </tr>
          
          <tr>
              <th colspan="2">募集人数</th>
          </tr>
              
            <tr>
                <td class="p-newnum" colspan="2"><input type="number" name="target_number"></td>
            </tr>  
              
            
          <tr>
              <th colspan="2">メイン画像</th>
          </tr>
          
          <tr>
              <td colspan="2"><input name="main_image" type="file"></td>
          </tr>
          
          <tr>
              <th colspan="2">イベントの概要</th>
          </tr>
          
          <tr>
              <td class="p-newout" colspan="2">
                  <textarea name="outline"></textarea>
              </td>
          </tr>
          
          <tr>
              <th colspan="2">イベント本分</th>
          </tr>
          <tr>
              <td class="p-newcon" colspan="2">
                  <textarea name="content"></textarea>
              </td>
          </tr>
      </table>
      
            <div class="post-newbtn">
                  <input type="submit" value="イベントを投稿する">
            </div>
        <% end %>
